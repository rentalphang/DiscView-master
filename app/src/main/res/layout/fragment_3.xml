<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EC5A4C">

    <com.xinlan.discview.DiscView
        android:id="@+id/disc_view"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        app:dvBottomCircleIsShow="true"
        app:dvInnerCirclePad="7dp"
        app:dvInnerCircleShow="true"
        app:dvStrokenWidth="14dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/disc_view"
        android:layout_marginTop="20dp"
        android:text="test" />

</RelativeLayout>
